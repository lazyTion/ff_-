
.table {
  border: 1px solid #ccc;
  font-size: 14px;
  width: 100%;
}
.tr {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}
.td {
  flex: 1;
}
.bg-w {
  background: snow;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
}
.btn {
  text-align: center;
  background: linear-gradient(to bottom, #7892c2 5%, #476e9e 100%);
  background-color: #7892c2;
  padding: 10rpx 15rpx;
  color: #fff;
  border-radius: 10rpx;
  margin: 30rpx;
}

